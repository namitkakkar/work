{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "amd", 
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "ojs/*":["./node_modules/@oracle/oraclejet/dist/types/*"],
            "knockout": ["./node_modules/knockout"]
        },
        "lib": ["es2015", "dom", "esnext.asynciterable"]
    },
    "include": [
        "./src/ts/**/*",
        "./__tests__/*.ts"
    ]
}
